<h3>Editar categoria:</h3>


<div class="card">
    <div class="card-body">
      
  <form action="/admin/categorias/edit/" method="post">
    <label for="">Nome: </label>
    <input
      type="text"
      name="nome"
      id="nome"
      placeholder="Nome da categoria"
      class="form-control"
      value="{{categoria.nome}}"
    />
    <input type="hidden" name="id" value="{{categoria._id}}" id="id">
    <label for="">Slug: </label>
    <input
      type="text"
      name="slug"
      id="slug"
      placeholder="Slug da categoria"
      class="form-control"
      value="{{categoria.slug}}"
    />
    <br />
    <button class="btn btn-success btn-sm" type="submit">Editar categoria</button>
  </form>
</div>
</div>