<h3>Editar POSTAGEM:</h3>

<div class="card">
  <div class="card-body">
    <h4 class="mt-1">EDITAR Postagem:</h4>
    <form action="/admin/postagens/edit/" method="post">
    <input type="hidden" name="id" value="{{postagem._id}}" id="id">
      <label for="titulo">Titulo: </label>
      <input
        type="text"
        name="titulo"
        id=""
        class="form-control"
        value="{{postagem.titulo}}"
      />
      <label for="slug">Slug: </label>
      <input
        type="text"
        name="slug"
        id=""
        class="form-control"
        value="{{postagem.slug}}"
      />
      <label for="descricao">Descrição: </label>
      <input
        type="text"
        name="descricao"
        id=""
        class="form-control"
        value="{{postagem.descricao}}"
      />
      <label for="conteudo">Conteudo: </label>
      <textarea
        name="conteudo"
        class="form-control"
        aria-valuetext="{{postagem.conteudo}}"
      ></textarea>
      <label for="categoria">Categoria: </label>
       <select name="categoria" id="" class="form-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="">Nenhuma categoria registrada</option>
        {{/each}}
      </select> 
      <button class="btn btn-success mt-3" type="submit">EDITAR Postagem</button>
    </form>
  </div>
</div>